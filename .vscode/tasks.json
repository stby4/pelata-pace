{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gradlew buildFatJar -x test",
            "problemMatcher": [
                "$gradle"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "gradlew run -Pdevelopment=true",
            "problemMatcher": [
                "$gradle"
            ],
            "group": {
                "kind": "none"
            }
        },
        {
            "label": "run continuous",
            "type": "shell",
            "command": "gradlew run --continuous -Pdevelopment=true -Pkotlin.incremental.js.ir=true",
            "problemMatcher": [
                "$gradle"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "gradlew test",
            "problemMatcher": [
                "$gradle"
            ],
            "group": {
                "kind": "test"
            }
        }
    ]
}
